{
    "extends":[
        "tslint:latest",
        "tslint-sonarts"
    ],
    "rules":{
        "quotemark": [
            true,
            "single",
            "jsx-single",
            "avoid-escape"
        ],
        "no-console": [true,  "error"],
        "max-line-length": [
            true,
            140
        ],
        "max-classes-per-file": [
            true,
            3
        ],
        "semicolon": [
            true,
            "always"
        ]
    }
}