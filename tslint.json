{
    "extends":[
        "tslint:latest"
    ],
    "rules":{
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace",
            "log",
            "error"
        ],
        "max-classes-per-file": [
            true,
            3
        ],
        "no-consecutive-blank-lines": true,
        "arrow-return-shorthand": true,
        "callable-types": true,
        "class-name": true,
        "interface-name": [
            true
        ],
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "deprecation": {
            "severity": "warn"
        },
        "eofline": true,
        "switch-default": true,
        "forin": true,
        "no-submodule-imports": [
            true,
            "rxjs",
            "core-js",
            "zone.js",
            "@angular"
        ],
        "import-blacklist": [
            true,
            "rxjs/Rx"
        ],
        "no-implicit-dependencies": false,
        "no-commented-code": false,
        "import-spacing": true,
        "indent": [
            true,
            "spaces"
        ],
        "interface-over-type-literal": true,
        "label-position": true,
        "max-line-length": [
            true,
            140
        ],
        "member-access": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-arg": true,
        "no-bitwise": true,
        "no-duplicate-variable": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-empty": false,
        "no-empty-interface": true,
        "no-eval": true,
        "no-inferrable-types": [
            true,
            "ignore-params"
        ],
        "no-misused-new": true,
        "no-non-null-assertion": true,
        "no-shadowed-variable": true,
        "no-string-literal": false,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "no-unused-expression": true,
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "constructor": "never",
                "named": "never",
                "asyncArrow": "never"
            }
        ],
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "object-literal-sort-keys": false,
        "no-var-requires": false,
        "only-arrow-functions": [
            false
        ],
        "ordered-imports": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "single",
            "jsx-single",
            "avoid-escape"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "unified-signatures": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "directive-selector": [
            true,
            "attribute",
            [],
            "kebab-case"
        ],
        "component-selector": [
            true,
            "element",
            [],
            "kebab-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "object-literal-shorthand": false,
        "no-output-on-prefix": true,
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-attribute-parameter-decorator": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "no-forward-ref": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "component-class-suffix": [
            true,
            "Component"
        ],
        "directive-class-suffix": [
            true,
            "Directive"
        ],
        "import-destructuring-spacing": true,
        "cognitive-complexity": [
            true,
            50
        ],
        "prefer-immediate-return": false,
        "prefer-conditional-expression": false,
        "test-case-name-length": true
    }
}